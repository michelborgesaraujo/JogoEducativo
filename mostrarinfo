#include "biblioteca.h"

mostrarInfoNivel1(Calcular calcular){

    puts("---Ainda está muito fácil se desafie!---");
    puts("---INFORMAÇÕES DETAHADAS---");

    printf("Dificuldade: %d", calcular.dificuldade);
    printf("Valores: %d - %d", calcular.valor1, calcular.valor2);
    printf("Tipo de Operação: %d", calcular.operacao);
}

